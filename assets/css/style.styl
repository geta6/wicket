@import url('http://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400,400italic')
@import 'nib'
global-reset()

*
  box-sizing border-box

html, body
  font 300 13px Roboto, Helvetica, Arial, Sans-Serif
  line-height 16px

textarea
  margin 0
  padding 0
  line-height inherit
  font inherit
  outline none
  resize none
  border none

#wiki-wrap
  position relative
  margin 50px
  padding 10px
  font-weight 400
  border 1px solid #E6E6E6
  cursor text

.wiki-test
  position absolute
  top -1000px
  opacity 0

.vcaret
  position fixed
  border-right 2px solid red
  height 16px

#wiki-body
  display block
  width 100%
  background rgba(0,0,0,.12)

#wiki-edit
  position fixed
  background rgba(0,0,0,.24)


header
  z-index 100
  position fixed
  top 0
  left 0
  right 0
  height 44px
  line-height 44px
  background white
  border-bottom 1px solid #E6E6E6
  box-shadow 0 0 4px rgba(0, 0, 0, .12)
  ul
    text-align center
    li
      display inline-block
      text-align center

#ime
  position absolute
  left 50px
  right 50px
  top 64px
  &.presync
    background #DDBBAA
  &.syncing
    background #AABBDD

#textarea
  position absolute
  left 50px
  right 50px
  top 50px
  bottom 50px
  padding 10px
  font-weight 400
  border 1px solid #E6E6E6